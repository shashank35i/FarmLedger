<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="16dp"/>
            <solid android:color="@color/fl_surface"/>
            <stroke android:width="2dp" android:color="@color/fl_primary"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="16dp"/>
            <solid android:color="@color/fl_surface"/>
            <stroke android:width="1dp" android:color="@color/fl_outline"/>
        </shape>
    </item>
</selector>
