<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FarmLedger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fl_primary</item>
        <item name="colorPrimaryVariant">@color/fl_primary_container</item>
        <item name="colorOnPrimary">@color/fl_on_primary</item>

        <item name="colorSecondary">@color/fl_secondary</item>
        <item name="colorSecondaryVariant">@color/fl_secondary_container</item>
        <item name="colorOnSecondary">@color/fl_on_secondary</item>

        <item name="android:colorBackground">@color/fl_background</item>
        <item name="colorSurface">@color/fl_surface</item>
        <item name="colorOnSurface">@color/fl_on_surface</item>

        <item name="colorError">@color/fl_error</item>
        <item name="colorOnError">@color/fl_on_error</item>

        <item name="android:statusBarColor">@color/fl_background</item>
        <item name="android:navigationBarColor">@color/fl_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="shapeAppearanceSmallComponent">@style/Shape.FarmLedger.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.FarmLedger.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.FarmLedger.Large</item>

        <item name="materialButtonStyle">@style/Widget.FarmLedger.Button</item>
        <item name="materialCardViewStyle">@style/Widget.FarmLedger.Card</item>
        <item name="textInputStyle">@style/Widget.FarmLedger.TextInput</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.FarmLedger.BottomSheet</item>
    </style>

    <style name="Theme.FarmLedger.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/fl_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/fl_primary_container</item>
        <item name="postSplashScreenTheme">@style/Theme.FarmLedger</item>
    </style>

    <style name="ThemeOverlay.FarmLedger.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Shape.FarmLedger.Small" parent="">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="Shape.FarmLedger.Medium" parent="">
        <item name="cornerSize">14dp</item>
    </style>
    <style name="Shape.FarmLedger.Large" parent="">
        <item name="cornerSize">18dp</item>
    </style>

    <style name="Widget.FarmLedger.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/fl_surface</item>
        <item name="titleTextColor">@color/fl_on_surface</item>
        <item name="subtitleTextColor">@color/fl_on_surface_variant</item>
    </style>

    <style name="Widget.FarmLedger.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/fl_primary</item>
        <item name="android:textColor">@color/fl_on_primary</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="Widget.FarmLedger.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/fl_outline</item>
        <item name="android:textColor">@color/fl_on_surface</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="Widget.FarmLedger.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/fl_surface</item>
        <item name="strokeColor">@color/fl_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/Shape.FarmLedger.Medium</item>
    </style>

    <style name="Widget.FarmLedger.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/fl_outline</item>
        <item name="boxBackgroundColor">@color/fl_surface</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/fl_on_surface_variant</item>
    </style>

    <style name="Widget.FarmLedger.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/fl_surface_variant</item>
        <item name="chipStrokeColor">@color/fl_outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/fl_on_surface</item>
    </style>
</resources>
