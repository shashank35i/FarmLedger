<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:fitsSystemWindows="true">

    <!-- TOP BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/fl_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_touch_circle"
            android:padding="11dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:tint="@color/fl_on_surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/fl_surface_variant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="14dp"
        android:paddingBottom="22dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_soft_blue_round"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="Terms"
                            android:src="@drawable/ic_doc"
                            app:tint="@color/fl_primary" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms &amp; Conditions"
                            android:textColor="@color/fl_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:includeFontPadding="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Last updated: October 15, 2023"
                            android:textColor="@color/fl_primary"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <!-- 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Acceptance of Terms"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="6dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="By accessing and using FarmLedger, you accept and agree to be bound by these Terms of Service. If you do not agree to these terms, please do not use our services."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Service Description"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FarmLedger provides blockchain-based agricultural supply chain traceability services, enabling transparency from farm to consumer.\n\nOur platform allows:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        android:lineSpacingExtra="3dp" />

                    <View android:layout_width="match_parent" android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product registration and batch creation"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Supply chain tracking and updates"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product verification and authenticity checks"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Immutable blockchain record keeping"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. User Responsibilities"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="As a user of FarmLedger, you agree to:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Provide accurate and truthful information"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Maintain the security of your account credentials"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Use the service in compliance with applicable laws"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Not misuse or attempt to manipulate blockchain records"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Blockchain Data"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="All product and batch data recorded on the blockchain is immutable and permanent. Once submitted, blockchain records cannot be altered or deleted. Users are responsible for the accuracy of submitted information."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Account Termination"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="We reserve the right to suspend or terminate accounts that violate these terms, engage in fraudulent activity, or misuse the platform. Users may also request account deletion through Privacy &amp; Security settings."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Limitation of Liability"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="FarmLedger provides the platform &quot;as is&quot; and makes no warranties regarding service availability, data accuracy, or blockchain network performance. We are not liable for indirect, incidental, or consequential damages."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 7 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Changes to Terms"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="We may update these Terms of Service from time to time. Continued use of the service after changes constitutes acceptance of the updated terms."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 8 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Contact Information"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For questions about these terms, contact us at:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        android:lineSpacingExtra="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="legal@farmledger.app"
                        android:textColor="@color/fl_primary"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
