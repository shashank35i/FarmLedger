<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSelectRetailer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@color/fl_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:padding="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Select Retailer"
            android:textColor="@color/fl_on_surface"
            android:textSize="22sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:text="Transfer  B-2023-001"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="14dp"
        app:cardBackgroundColor="@color/fl_surface"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/fl_surface_variant"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <FrameLayout
                android:id="@+id/infoIconTile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_icon_tile_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/ivInfoIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_shop_outline"
                    app:tint="@color/fl_primary" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvInfoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Transfer to Retailer"
                android:textColor="@color/fl_on_surface"
                android:textSize="17sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@id/infoIconTile"
                app:layout_constraintTop_toTopOf="@id/infoIconTile"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvInfoDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:text="Select a verified retailer to transfer this batch. Once transferred, distributor data will be locked."
                android:textColor="@color/fl_primary"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@id/infoIconTile"
                app:layout_constraintTop_toBottomOf="@id/tvInfoTitle"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvVerifiedHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="16dp"
        android:text="Verified Retailers"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="17sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/cardInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRetailers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tvVerifiedHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvManualHeader" />

    <TextView
        android:id="@+id/tvManualHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Or Enter Manually"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="17sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etManual" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etManual"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_input_outline_soft"
        android:hint="Enter Retailer ID or Phone Number"
        android:inputType="text"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textColor="@color/fl_on_surface"
        android:textColorHint="@color/fl_on_surface_variant"
        android:textSize="17sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@id/actionRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionRow"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="32dp"
            app:backgroundTint="@color/fl_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginEnd="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/fl_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="32dp"
            app:backgroundTint="@color/fl_surface"
            app:strokeColor="@color/fl_primary"
            app:strokeWidth="2dp"
            app:layout_constraintStart_toEndOf="@id/btnConfirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
