<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTransfer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/fl_surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/fl_outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tvProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Organic Tomatoes"
            android:textColor="@color/fl_on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pillVerified"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/pillVerified"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_verified_pill"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_shield_check"
                app:tint="@color/fl_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBatchId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            android:text="B-2023-001"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProduct" />

        <View
            android:id="@+id/div1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/fl_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/tvBatchId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivFrom"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_user"
            app:tint="@color/fl_on_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/div1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvFromLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="From Farmer"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivFrom"
            app:layout_constraintTop_toBottomOf="@id/div1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFromValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:includeFontPadding="false"
            android:text="Green Valley Farms"
            android:textColor="@color/fl_on_surface"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivFrom"
            app:layout_constraintTop_toBottomOf="@id/tvFromLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivQty"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_nav_box"
            app:tint="@color/fl_on_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/tvFromValue"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvQtyLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="Quantity"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivQty"
            app:layout_constraintTop_toBottomOf="@id/tvFromValue"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvQtyValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:includeFontPadding="false"
            android:text="500 kg"
            android:textColor="@color/fl_on_surface"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivQty"
            app:layout_constraintTop_toBottomOf="@id/tvQtyLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivDate"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/fl_on_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/tvQtyValue"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="Transfer Date"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivDate"
            app:layout_constraintTop_toBottomOf="@id/tvQtyValue"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:includeFontPadding="false"
            android:text="Oct 13, 2023 10:15 AM"
            android:textColor="@color/fl_on_surface"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivDate"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/boxTx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_tx_box"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTxTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Blockchain Transaction"
                android:textColor="@color/fl_primary"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTxHash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="0x7f9fade1c0...91385"
                android:textColor="@color/fl_primary"
                android:textSize="12sp"
                android:typeface="monospace"
                android:maxLines="5" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/fl_primary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Accept Transfer"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            android:textSize="10sp"
            android:textStyle="bold"
            app:cornerRadius="26dp"

            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/fl_on_surface"
            app:layout_constraintTop_toBottomOf="@id/boxTx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnReject" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/fl_surface"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/fl_error"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="26dp"

            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/fl_error"
            app:strokeColor="@color/fl_error"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/boxTx"
            app:layout_constraintStart_toEndOf="@id/btnAccept"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
