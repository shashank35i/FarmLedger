<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:background="@drawable/bg_header_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingTop="34dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Welcome back,"
                        android:textColor="@color/fl_on_primary"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="FastTrans Logistics"
                        android:textColor="@color/fl_on_primary"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iconCircle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

                    <FrameLayout
                        android:id="@+id/iconCircle"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/bg_circle_translucent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivTruck"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_truck_outline"
                            app:tint="@color/fl_on_primary" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="-44dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:id="@+id/icHandledBg"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/bg_icon_soft_blue"
                            app:layout_constraintBottom_toTopOf="@+id/tvHandledLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_nav_box"
                                app:tint="@color/primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvHandledLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="Handled"
                            android:textColor="@color/textSecondary"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@+id/tvHandledValue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icHandledBg" />

                        <TextView
                            android:id="@+id/tvHandledValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="156"
                            android:textColor="@color/textPrimary"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHandledLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:id="@+id/icTransitBg"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/bg_icon_soft_orange"
                            app:layout_constraintBottom_toTopOf="@+id/tvTransitLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_truck_outline"
                                app:tint="@color/orange" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvTransitLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="In Transit"
                            android:textColor="@color/textSecondary"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@+id/tvTransitValue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icTransitBg" />

                        <TextView
                            android:id="@+id/tvTransitValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="24"
                            android:textColor="@color/textPrimary"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTransitLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="16dp">

                        <FrameLayout
                            android:id="@+id/icDeliveredBg"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@drawable/bg_icon_soft_green"
                            app:layout_constraintBottom_toTopOf="@+id/tvDeliveredLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_check_circle_line"
                                app:tint="@color/green" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvDeliveredLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="Delivered"
                            android:textColor="@color/textSecondary"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@+id/tvDeliveredValue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icDeliveredBg" />

                        <TextView
                            android:id="@+id/tvDeliveredValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="132"
                            android:textColor="@color/textPrimary"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDeliveredLabel" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quickRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statsRow">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardIncoming"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="18dp">

                        <FrameLayout
                            android:id="@+id/incomingIconWrap"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_soft_blue"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            app:layout_constraintBottom_toTopOf="@+id/tvIncoming"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivIncoming"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_inbox_line"
                                app:tint="@color/primary" />

                            <TextView
                                android:id="@+id/badge"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="end|top"
                                android:layout_marginEnd="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/bg_badge_primary"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/fl_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </FrameLayout>


                        <TextView
                            android:id="@+id/tvIncoming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="Incoming"
                            android:textColor="@color/primaryDark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/incomingIconWrap" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInventory"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="18dp">

                        <FrameLayout
                            android:id="@+id/inventoryIconWrap"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_soft_green"
                            app:layout_constraintBottom_toTopOf="@+id/tvInventory"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivInventory"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_inventory_line"
                                app:tint="@color/greenDark" />

                            <TextView
                                android:id="@+id/badgeInventory"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="end|top"
                                android:layout_marginEnd="2dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/bg_badge_orange"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/fl_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvInventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="My Inventory"
                            android:textColor="@color/greenDark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/inventoryIconWrap" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_scan_button"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:text="Scan QR Code"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quickRow" />

            <ImageView
                android:id="@+id/ivScanIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_qr_line"
                app:layout_constraintBottom_toBottomOf="@+id/btnScan"
                app:layout_constraintStart_toStartOf="@+id/btnScan"
                app:layout_constraintTop_toTopOf="@+id/btnScan"
                app:tint="@color/fl_on_primary" />

            <TextView
                android:id="@+id/tvRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="Recent Batches"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnScan" />

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="View All"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvRecent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp">

                        <FrameLayout
                            android:id="@+id/batchIcon1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_soft_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_nav_box"
                                app:tint="@color/primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBatchName1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="Organic Tomatoes"
                            android:textColor="@color/textPrimary"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/batchIcon1"
                            app:layout_constraintTop_toTopOf="@+id/batchIcon1" />

                        <TextView
                            android:id="@+id/tvBatchCode1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="B-2023-001"
                            android:textColor="@color/textSecondary"
                            android:textSize="13sp"
                            app:layout_constraintStart_toEndOf="@+id/batchIcon1"
                            app:layout_constraintTop_toBottomOf="@+id/tvBatchName1" />

                        <TextView
                            android:id="@+id/pill1"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_pill_orange"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:text="In Transit"
                            android:textColor="@color/orangeDark"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/tvBatchCode1"
                            app:layout_constraintTop_toBottomOf="@+id/tvBatchCode1" />

                        <TextView
                            android:id="@+id/tvTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="10 mins ago"
                            android:textColor="@color/textHint"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="@+id/pill1"
                            app:layout_constraintTop_toBottomOf="@+id/pill1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/emptyRecent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="24dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivEmpty"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_nav_box"
                        app:tint="@color/textHint"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvEmptyTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="No recent batches yet"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/ivEmpty"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvEmptySub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
