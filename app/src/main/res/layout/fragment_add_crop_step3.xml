<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pageStep3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:forceDarkAllowed="false">

    <FrameLayout
        android:id="@+id/successIconWrap"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_success_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivSuccessCheck"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="@null"
            app:tint="@color/fl_primary" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvSuccessTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Batch Created Successfully!"
        android:textColor="@color/fl_on_surface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/successIconWrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSuccessSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Your product has been registered on the\nblockchain. You can now generate QR\ncodes."
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvSuccessTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardChain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="@color/fl_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/fl_outline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvSuccessSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivChain"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_link"
                android:contentDescription="@null"
                app:tint="@color/fl_on_surface_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvChainTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif"
                android:text="Blockchain Record"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/ivChain"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chipConfirmed" />

            <TextView
                android:id="@+id/chipConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/bg_chip_confirmed"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="confirmed"
                android:textColor="@color/fl_primary"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTxLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif"
                android:text="Transaction Hash"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvChainTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/txBox"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tx_box"
                android:paddingStart="14dp"
                android:paddingEnd="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvTxLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvTxHash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="0x71C...9A23"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivCopy"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/ivCopy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    android:contentDescription="@null"
                    app:tint="@color/fl_on_surface_variant"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvBlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="Block # 14230492"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/txBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvWhen" />

            <TextView
                android:id="@+id/tvWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Just now"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/tvBlock"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGenerateQr"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif"
        android:text="Generate QR Code"
        android:textAllCaps="false"
        android:textColor="@color/fl_on_surface"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:backgroundTint="@color/fl_primary"
        app:cornerRadius="28dp"
        app:rippleColor="@color/fl_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/cardChain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvReturnDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Return to Dashboard"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btnGenerateQr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
