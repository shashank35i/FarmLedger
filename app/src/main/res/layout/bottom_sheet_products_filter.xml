<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fl_background"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="12dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@color/fl_outline" />

    <TextView
        android:id="@+id/tvFilterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter products"
        android:textColor="@color/fl_on_surface"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFilterHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Show batches by status"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="13sp" />

    <!-- 2x2 grid (All/Active on row 1, Pending/Sold on row 2) -->
    <LinearLayout
        android:id="@+id/statusGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/statusRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterAll"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                app:backgroundTint="@color/fl_surface_variant"
                app:cornerRadius="12dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterActive"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Active"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                app:backgroundTint="@color/fl_surface_variant"
                app:cornerRadius="12dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterPending"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Pending"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                app:backgroundTint="@color/fl_surface_variant"
                app:cornerRadius="12dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterSold"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Sold"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                app:backgroundTint="@color/fl_surface_variant"
                app:cornerRadius="12dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterReset"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            app:backgroundTint="@color/fl_surface_variant"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterApply"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            app:backgroundTint="@color/fl_primary"
            app:cornerRadius="12dp" />
    </LinearLayout>

</LinearLayout>
