<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:fitsSystemWindows="true">

    <!-- TOP BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/fl_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_touch_circle"
            android:padding="11dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:tint="@color/fl_on_surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/fl_surface_variant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="14dp"
        android:paddingBottom="22dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_soft_green_round"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:contentDescription="Privacy"
                            android:src="@drawable/ic_shield"
                            app:tint="@color/fl_primary" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Privacy Matters"
                            android:textColor="@color/fl_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:includeFontPadding="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Last updated: October 15, 2023"
                            android:textColor="@color/fl_primary"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <!-- 1 -->
            <TextView
                android:id="@+id/tvH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Information We Collect"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="6dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FarmLedger collects information necessary to provide blockchain-based agricultural supply chain transparency. This includes:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        android:lineSpacingExtra="3dp" />

                    <View android:layout_width="match_parent" android:layout_height="12dp" />

                    <!-- bullets -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Account information (name, email, phone number)"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product and batch data for traceability"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Location data for supply chain tracking"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Blockchain transaction records"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. How We Use Your Information"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We use your information to:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Provide and maintain our blockchain traceability services"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Verify product authenticity and supply chain integrity"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Send important notifications about your products"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Improve our services and user experience"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Data Security"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="We implement industry-standard security measures including encryption, secure blockchain storage, and regular security audits to protect your data."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Data Sharing"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="We do not sell your personal information. Product traceability data is shared within the supply chain as necessary for transparency, but personal details remain confidential."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:lineSpacingExtra="3dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Your Rights"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You have the right to:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp" />

                    <View android:layout_width="match_parent" android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Access your personal data"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Request data correction or deletion"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Export your data"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/dot_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Opt-out of marketing communications"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Contact Us"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_marginTop="22dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For privacy concerns or questions, contact us at:"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        android:lineSpacingExtra="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="privacy@farmledger.app"
                        android:textColor="@color/fl_primary"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
