<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootNotifications"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/fl_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Notifications"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_surface_variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerDivider">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tvChannels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="Notification Channels"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChannels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowPush"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="78dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivPush"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_notif_bell"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvPush"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Push Notifications"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swPush"
                            app:layout_constraintStart_toEndOf="@id/ivPush"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvPushSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Receive alerts on your device"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swPush"
                            app:layout_constraintStart_toEndOf="@id/ivPush"
                            app:layout_constraintTop_toBottomOf="@id/tvPush" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swPush"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvPushSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvPush" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="78dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivEmail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_notif_mail"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Email Notifications"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swEmail"
                            app:layout_constraintStart_toEndOf="@id/ivEmail"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvEmailSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Get updates via email"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swEmail"
                            app:layout_constraintStart_toEndOf="@id/ivEmail"
                            app:layout_constraintTop_toBottomOf="@id/tvEmail" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swEmail"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvEmailSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvEmail" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowSms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="78dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivSms"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_notif_sms"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvSms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="SMS Notifications"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swSms"
                            app:layout_constraintStart_toEndOf="@id/ivSms"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvSmsSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Receive text messages"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swSms"
                            app:layout_constraintStart_toEndOf="@id/ivSms"
                            app:layout_constraintTop_toBottomOf="@id/tvSms" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swSms"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvSmsSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvSms" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="Notification Types"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowBatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="78dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivBatch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_notif_cube"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBatch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Batch Updates"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swBatch"
                            app:layout_constraintStart_toEndOf="@id/ivBatch"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBatchSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Product and batch status changes"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swBatch"
                            app:layout_constraintStart_toEndOf="@id/ivBatch"
                            app:layout_constraintTop_toBottomOf="@id/tvBatch" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swBatch"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvBatchSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvBatch" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowVerify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="78dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivVerify"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_notif_shield"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvVerify"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Verification Alerts"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swVerify"
                            app:layout_constraintStart_toEndOf="@id/ivVerify"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvVerifySub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Blockchain verification updates"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swVerify"
                            app:layout_constraintStart_toEndOf="@id/ivVerify"
                            app:layout_constraintTop_toBottomOf="@id/tvVerify" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swVerify"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvVerifySub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvVerify" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowMarketing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="78dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivMarketing"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_notif_mail"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvMarketing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Marketing Emails"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swMarketing"
                            app:layout_constraintStart_toEndOf="@id/ivMarketing"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvMarketingSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="News and product updates"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swMarketing"
                            app:layout_constraintStart_toEndOf="@id/ivMarketing"
                            app:layout_constraintTop_toBottomOf="@id/tvMarketing" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swMarketing"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvMarketingSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvMarketing" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/ivInfo"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="2dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_info_bell"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvInfoTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Stay Informed"
                        android:textColor="@color/fl_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivInfo"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvInfoBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="6dp"
                        android:lineSpacingExtra="2dp"
                        android:text="Enable notifications to receive real-time updates about your products and blockchain verifications."
                        android:textColor="@color/fl_primary"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivInfo"
                        app:layout_constraintTop_toBottomOf="@id/tvInfoTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
