<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/headerBg"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:background="@color/fl_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnBackWrap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/fl_surface_variant"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow_left"
                app:tint="@color/fl_on_surface" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="-72dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="false"
            app:strokeColor="@color/fl_outline"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerBg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Organic Tomatoes"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pillVerified"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBatchId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Batch #B-2023-001"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pillVerified"
                    app:layout_constraintTop_toBottomOf="@id/tvProductName" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pillVerified"
                    android:layout_width="56dp"
                    android:layout_height="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/fl_primary_container"
                    app:strokeWidth="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_shield"
                            app:tint="@color/fl_primary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/tagsRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBatchId">

                    <TextView
                        android:id="@+id/tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetables"
                        android:textColor="@color/fl_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/bg_tag_green" />

                    <TextView
                        android:id="@+id/tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Organic"
                        android:textColor="@color/fl_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/bg_tag_green" />

                    <TextView
                        android:id="@+id/tag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Transferred"
                        android:textColor="@color/fl_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/bg_tag_blue"
                        android:visibility="gone" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTransferAccepted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:strokeColor="@color/fl_outline"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <ImageView
                    android:id="@+id/ivAccepted"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/fl_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAcceptedTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Transfer Accepted"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivAccepted"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAcceptedSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Distributor confirmed receipt on Oct 14, 2023 02:30 PM"
                    android:textColor="@color/fl_primary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/tvAcceptedTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAcceptedTitle" />

                <View
                    android:id="@+id/divAccepted"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/fl_surface_variant"
                    app:layout_constraintTop_toBottomOf="@id/tvAcceptedSub"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTxLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Blockchain TX"
                    android:textColor="@color/fl_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divAccepted" />

                <TextView
                    android:id="@+id/tvTxHash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0x..."
                    android:textColor="@color/fl_primary"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTxLabel" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareCertificateAccepted"
                    style="@style/Widget.FarmLedger.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="16dp"
                    android:text="Share Certificate"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    app:cornerRadius="23dp"
                    app:strokeColor="@color/fl_primary"
                    app:strokeWidth="2dp"
                    android:textColor="@color/fl_primary"
                    app:icon="@drawable/ic_share"
                    app:iconTint="@color/fl_primary"
                    app:iconPadding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTxHash" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/rowActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/cardTransferAccepted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTransfer"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Transfer to Distributor"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingEnd="20dp"
                android:gravity="center_vertical"
                android:paddingStart="90dp"
                android:backgroundTint="@color/fl_primary"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_truck_outline"
                app:iconTint="@color/fl_on_surface"
                app:iconPadding="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.FarmLedger.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:text="Share Certificate"
                android:paddingStart="90dp"
                android:paddingEnd="90dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="28dp"
                app:strokeColor="@color/fl_primary"
                app:strokeWidth="2dp"
                android:textColor="@color/fl_primary"
                app:icon="@drawable/ic_share"
                app:iconTint="@color/fl_primary"
                app:iconPadding="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProductDetailsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp"
            android:text="Product Details"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rowActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvProductDetailsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQty"
                android:layout_width="0dp"
                android:layout_height="74dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/fl_surface"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardHarvest"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="500 kg"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHarvest"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/fl_surface"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toEndOf="@id/cardQty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harvest Date"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvHarvestDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Oct 12, 2023"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFert"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/fl_surface"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardSeed"
                app:layout_constraintTop_toBottomOf="@id/cardQty">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fertilizer"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvFertilizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Organic Compost"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSeed"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/fl_surface"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toEndOf="@id/cardFert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardHarvest">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seed Type"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvSeedType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Heirloom"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvJourneyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp"
            android:text="Journey Status"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/gridDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardJourney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="22dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:strokeColor="@color/fl_outline"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvJourneyTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/circle1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/fl_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_check"
                        app:tint="@color/fl_on_surface" />
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/line1"
                    android:layout_width="2dp"
                    android:layout_height="32dp"
                    android:background="@color/fl_primary"
                    app:layout_constraintTop_toBottomOf="@id/circle1"
                    app:layout_constraintStart_toStartOf="@id/circle1"
                    app:layout_constraintEnd_toEndOf="@id/circle1" />

                <TextView
                    android:id="@+id/tvStep1Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Registered"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/circle1"
                    app:layout_constraintTop_toTopOf="@id/circle1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvStep1Sub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Batch created and registered on blockchain"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/tvStep1Title"
                    app:layout_constraintTop_toBottomOf="@id/tvStep1Title"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvStep1Time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Oct 12, 2023 08:30 AM"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/tvStep1Title"
                    app:layout_constraintTop_toBottomOf="@id/tvStep1Sub"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/circle2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/fl_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line1">

                    <TextView
                        android:id="@+id/tvStep2Num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/line2"
                    android:layout_width="2dp"
                    android:layout_height="32dp"
                    android:background="@color/fl_outline"
                    app:layout_constraintTop_toBottomOf="@id/circle2"
                    app:layout_constraintStart_toStartOf="@id/circle2"
                    app:layout_constraintEnd_toEndOf="@id/circle2" />

                <TextView
                    android:id="@+id/tvStep2Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Transferred"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/circle2"
