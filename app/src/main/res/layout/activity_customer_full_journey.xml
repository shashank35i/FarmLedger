<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fl_background"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/fl_on_surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            android:text="Full Journey"
            android:textColor="@color/fl_on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toStartOf="@+id/btnShare" />

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share"
            app:tint="@color/fl_on_surface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/bg_top_divider"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toBottomOf="@+id/divTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <!-- Header -->
            <TextView
                android:id="@+id/tvProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Organic Tomatoes"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvBatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="Batch #B-2023-001"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- === ITEM TEMPLATE (compact) === -->

            <!-- Item 1 -->
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_circle_orange"
                android:padding="9dp"
                android:src="@drawable/ic_check_circle_line"
                app:tint="@color/fl_tertiary"
                app:layout_constraintTop_toBottomOf="@+id/tvBatch"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:includeFontPadding="false"
                android:text="Today, 08:00 AM"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvBatch"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="Available at Store"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/time1"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/desc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="Product stocked on shelves. Quality check passed."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/title1"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/chips1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/desc1"
                app:layout_constraintStart_toEndOf="@+id/icon1"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Fresh Mart Inc., San Francisco"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_location_pin"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Retailer"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_user_outline"
                    android:drawablePadding="8dp" />
            </LinearLayout>

            <!-- Item 2 -->
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_circle_blue"
                android:padding="9dp"
                android:src="@drawable/ic_check_circle_line"
                app:tint="@color/fl_primary"
                app:layout_constraintTop_toBottomOf="@+id/chips1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:includeFontPadding="false"
                android:text="Today, 06:30 AM"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/chips1"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="Transport Completed"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/time2"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/desc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="Delivered to retail location. Temperature maintained at 4Â°C."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/title2"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/chips2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/desc2"
                app:layout_constraintStart_toEndOf="@+id/icon2"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="San Francisco Distribution Hub"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_location_pin"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="FastTrans Logistics"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_user_outline"
                    android:drawablePadding="8dp" />
            </LinearLayout>

            <!-- Item 3 (compact, horizontal chips like screenshot) -->
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_circle_blue"
                android:padding="9dp"
                android:src="@drawable/ic_check_circle_line"
                app:tint="@color/fl_primary"
                app:layout_constraintTop_toBottomOf="@+id/chips2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:includeFontPadding="false"
                android:text="Yesterday, 02:15 PM"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/chips2"
                app:layout_constraintStart_toEndOf="@+id/icon3"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="In Transit"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/time3"
                app:layout_constraintStart_toEndOf="@+id/icon3"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/desc3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="Vehicle V-2023 departed regional hub."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/title3"
                app:layout_constraintStart_toEndOf="@+id/icon3"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/chips3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/desc3"
                app:layout_constraintStart_toEndOf="@+id/icon3"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Highway 101"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_location_pin"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="FastTrans Logistics"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_user_outline"
                    android:drawablePadding="8dp" />
            </LinearLayout>

            <!-- Item 4 -->
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:padding="9dp"
                android:src="@drawable/ic_check_circle_line"
                app:tint="@color/fl_primary"
                app:layout_constraintTop_toBottomOf="@+id/chips3"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/time4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:includeFontPadding="false"
                android:text="Oct 12, 11:00 AM"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/chips3"
                app:layout_constraintStart_toEndOf="@+id/icon4"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/title4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="Quality Check &amp; Packing"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/time4"
                app:layout_constraintStart_toEndOf="@+id/icon4"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/desc4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="Graded A+ quality. Packed in eco-friendly crates."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/title4"
                app:layout_constraintStart_toEndOf="@+id/icon4"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/chips4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/desc4"
                app:layout_constraintStart_toEndOf="@+id/icon4"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Green Valley Farms"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_location_pin"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_chip_light"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Farmer"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    android:drawableStart="@drawable/ic_user_outline"
                    android:drawablePadding="8dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:text="No journey updates yet"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/divTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
