<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSuccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="26dp"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top success circle -->
        <FrameLayout
            android:id="@+id/successCircle"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_success_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivSuccess"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_check_circle_line"
                app:tint="@color/fl_primary" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Transfer Successful!"
            android:textColor="@color/fl_on_surface"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/successCircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Batch has been transferred to distributor"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Details card (compact) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/fl_outline"
            app:cardBackgroundColor="@color/fl_surface"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <ImageView
                    android:id="@+id/ivTruck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_truck_outline"
                    app:tint="@color/fl_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBatchLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="Batch ID"
                    android:textColor="@color/fl_primary"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/ivTruck"
                    app:layout_constraintTop_toTopOf="@+id/ivTruck"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvBatchValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="B-2023-001"
                    android:textColor="@color/fl_on_primary_container"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@+id/ivTruck"
                    app:layout_constraintTop_toBottomOf="@+id/tvBatchLabel"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/div1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/fl_primary_container"
                    app:layout_constraintTop_toBottomOf="@+id/tvBatchValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvProductLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="Product"
                    android:textColor="@color/fl_primary"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@+id/div1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvProductValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="Organic Tomatoes"
                    android:textColor="@color/fl_on_primary_container"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@+id/tvProductLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/div2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/fl_primary_container"
                    app:layout_constraintTop_toBottomOf="@+id/tvProductValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvToLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="Transferred To"
                    android:textColor="@color/fl_primary"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@+id/div2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvToValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="D-001"
                    android:textColor="@color/fl_on_primary_container"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@+id/tvToLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Next card (compact, fixed lines) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/fl_outline"
            app:cardBackgroundColor="@color/fl_surface"
            app:layout_constraintTop_toBottomOf="@+id/cardDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <TextView
                    android:id="@+id/tvNextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="What happens next?"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNextBullet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_check_circle_18"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Batch data is now locked (read-only)"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13.8sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:drawableTint="@color/fl_primary" />

                <TextView
                    android:id="@+id/tvNextBullet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_check_circle_18"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Distributor can now view and update batch status"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13.8sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:drawableTint="@color/fl_primary" />

                <TextView
                    android:id="@+id/tvNextBullet3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_check_circle_18"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Blockchain record updated with transfer timestamp"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13.8sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:drawableTint="@color/fl_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom action pinned to bottom -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackDashboard"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Back to Dashboard"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fl_on_surface"
            app:cornerRadius="28dp"
            android:backgroundTint="@color/fl_primary"
            app:layout_constraintBottom_toTopOf="@+id/tvRedirect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNext"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/tvRedirect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Redirecting automatically in 1 seconds..."
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12.5sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
