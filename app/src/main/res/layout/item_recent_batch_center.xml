<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/fl_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/fl_outline"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <FrameLayout
            android:id="@+id/iconWrap"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_icon_soft_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_sprout"
                app:tint="@color/fl_primary" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Organic Tomatoes"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toTopOf="@id/iconWrap"
            app:layout_constraintBottom_toBottomOf="@id/iconWrap"
            app:layout_constraintEnd_toStartOf="@id/chipStatus" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="@id/iconWrap"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Active"
                android:textColor="@color/fl_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:includeFontPadding="false" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="B-2023-001  2 hours ago"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12.5sp"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toBottomOf="@id/iconWrap"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:text="Qty 20 kg  Harvest 2026-01-18"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toBottomOf="@id/tvSub"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>