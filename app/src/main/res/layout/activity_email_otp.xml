<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootOtp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollOtp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="38dp"
            android:paddingBottom="28dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBackOtp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/fl_on_surface_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOtpIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/fl_primary_container"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBackOtp">

                <ImageView
                    android:id="@+id/imgOtp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="OTP"
                    android:src="@drawable/ic_mail"
                    app:tint="@color/fl_primary" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvOtpTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif"
                android:text="Verify your email"
                android:textColor="@color/fl_on_surface"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardOtpIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvOtpSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:text="We sent a 6-digit verification code to your email. Enter it below to continue."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvOtpTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvOtpLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif"
                android:text="Verification Code"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvOtpSub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOtp"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:hint="Enter 6-digit OTP"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:letterSpacing="0.15"
                app:layout_constraintTop_toBottomOf="@id/tvOtpLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVerify"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_button_green_pill"
                android:fontFamily="sans-serif"
                android:text="Verify"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etOtp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif"
                android:text="Resend code"
                android:textColor="@color/fl_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btnVerify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvOtpNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="Check spam/junk folder if you don't see the email."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvResend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
