<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/fl_on_surface" />

        <LinearLayout
            android:id="@+id/titleWrap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Location"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/fl_on_surface"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvBatchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-2023-001"
                android:textSize="14sp"
                android:textColor="@color/fl_on_surface_variant"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_outline"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMovement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/fl_surface"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/fl_outline"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvMovementTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Movement Update"
                android:textColor="@color/fl_on_surface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvMovementSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Record the current location and status"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvMovementTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/sectionDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fl_outline"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvMovementSub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lblDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Time"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/sectionDivider"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dateTimeWrap"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fl_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/fl_outline"
                app:layout_constraintTop_toBottomOf="@id/lblDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/fl_on_primary"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:singleLine="true"
                    android:text="2025-12-17T04:44"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/lblCurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Location"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/dateTimeWrap"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/locationWrap"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fl_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/fl_outline"
                app:layout_constraintTop_toBottomOf="@id/lblCurrentLocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/fl_on_surface"
                    android:textColorHint="@color/fl_on_surface_variant"
                    android:hint="Enter location or use auto-detect"
                    android:inputType="textPostalAddress"
                    android:singleLine="true"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/rowAutoDetect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/locationWrap"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/ivPin"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_pin_24"
                    app:tint="@color/fl_primary" />

                <TextView
                    android:id="@+id/tvAutoDetect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-detect location"
                    android:textColor="@color/fl_primary"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lblRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks (Optional)"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/rowAutoDetect"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/remarksWrap"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/fl_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/fl_outline"
                app:layout_constraintTop_toBottomOf="@id/lblRemarks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/buttonRow">

                <EditText
                    android:id="@+id/etRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:gravity="top"
                    android:textSize="15sp"
                    android:textColor="@color/fl_on_surface"
                    android:textColorHint="@color/fl_on_surface_variant"
                    android:hint="Add any notes about conditions, delays, or observations"
                    android:inputType="textMultiLine"
                    android:maxLines="4"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/buttonRow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Submit Update"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/fl_primary"
                    android:textColor="@color/fl_on_surface"
                    app:cornerRadius="28dp"
                    app:elevation="0dp"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/fl_surface"
                    android:textColor="@color/fl_primary"
                    app:cornerRadius="28dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/fl_primary"
                    app:elevation="0dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
