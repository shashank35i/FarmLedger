<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootBatchVerify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fl_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/fl_on_surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Batch Verification"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvBatchIdTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="B - 2023-001"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_outline"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@+id/divTop"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVerified"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">

                    <FrameLayout
                        android:id="@+id/verifiedIconWrap"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_verified_circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/ivVerified"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_check_circle_line"
                            app:tint="@color/fl_primary" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvVerifiedTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Blockchain Verified"
                        android:textColor="@color/fl_on_primary_container"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/verifiedIconWrap"
                        app:layout_constraintTop_toTopOf="@+id/verifiedIconWrap"
                        app:layout_constraintEnd_toStartOf="@+id/shieldPill" />

                    <TextView
                        android:id="@+id/tvVerifiedSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Authentic product"
                        android:textColor="@color/fl_primary"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/verifiedIconWrap"
                        app:layout_constraintTop_toBottomOf="@+id/tvVerifiedTitle"
                        app:layout_constraintEnd_toStartOf="@+id/shieldPill" />

                    <FrameLayout
                        android:id="@+id/shieldPill"
                        android:layout_width="64dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_verified_pill"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_check_circle_line"
                            app:tint="@color/fl_on_primary_container" />
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface"
                app:layout_constraintTop_toBottomOf="@+id/cardVerified"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:id="@+id/tvCropHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Crop Information"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/icCrop"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="18dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_nav_box"
                        app:tint="@color/fl_on_surface_variant"
                        app:layout_constraintTop_toBottomOf="@+id/tvCropHeader"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvCropNameLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Crop Name"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/icCrop"
                        app:layout_constraintTop_toBottomOf="@+id/tvCropHeader"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvCropName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Organic Tomatoes"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/icCrop"
                        app:layout_constraintTop_toBottomOf="@+id/tvCropNameLabel"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/icQty"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="22dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_nav_box"
                        app:tint="@color/fl_on_surface_variant"
                        app:layout_constraintTop_toBottomOf="@+id/tvCropName"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvQtyLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Quantity"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/icQty"
                        app:layout_constraintTop_toBottomOf="@+id/tvCropName"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="500 kg"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/icQty"
                        app:layout_constraintTop_toBottomOf="@+id/tvQtyLabel"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/icHarvest"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="22dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/fl_on_surface_variant"
                        app:layout_constraintTop_toBottomOf="@+id/tvQuantity"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvHarvestLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Harvest Date"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/icHarvest"
                        app:layout_constraintTop_toBottomOf="@+id/tvQuantity"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvHarvestDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="October 10, 2023"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/icHarvest"
                        app:layout_constraintTop_toBottomOf="@+id/tvHarvestLabel"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSupply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface"
                app:layout_constraintTop_toBottomOf="@+id/cardCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:id="@+id/tvSupplyHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Supply Chain"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/icFarmer"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="18dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_user"
                        app:tint="@color/fl_on_surface_variant"
                        app:layout_constraintTop_toBottomOf="@+id/tvSupplyHeader"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvFarmerLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Farmer"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/icFarmer"
                        app:layout_constraintTop_toBottomOf="@+id/tvSupplyHeader"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvFarmer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Green Valley Farms"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/icFarmer"
                        app:layout_constraintTop_toBottomOf="@+id/tvFarmerLabel"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/icDistributor"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="22dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_truck_outline"
                        app:tint="@color/fl_on_surface_variant"
                        app:layout_constraintTop_toBottomOf="@+id/tvFarmer"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvDistributorLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Distributor"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/icDistributor"
                        app:layout_constraintTop_toBottomOf="@+id/tvFarmer"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvDistributor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="FastTrans Logistics"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/icDistributor"
                        app:layout_constraintTop_toBottomOf="@+id/tvDistributorLabel"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fl_background"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmReceipt"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/fl_tertiary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="Confirm Receipt"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="26dp"
            app:icon="@drawable/ic_check_circle_line"
            app:iconTint="@color/fl_on_surface"
            app:iconSize="18dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnViewHistory"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewHistory"
            style="@style/Widget.FarmLedger.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/fl_surface"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="View History"
            android:textAllCaps="false"
            android:textColor="@color/fl_tertiary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="26dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/fl_tertiary"
            app:icon="@drawable/ic_history"
            app:iconTint="@color/fl_tertiary"
            app:iconSize="18dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnConfirmReceipt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
