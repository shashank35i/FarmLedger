<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="24dp">

    <!-- ICON + LINE -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/timeline_orange"/>

        <View
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="@color/fl_outline"/>
    </LinearLayout>

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:text="Today, 08:00 AM"
            android:textSize="12sp"
            android:textColor="#777"/>

        <TextView
            android:text="Available at Store"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:text="Product stocked on shelves. Quality check passed."
            android:textSize="12sp"
            android:textColor="#555"/>

        <TextView
            android:text="Fresh Mart Inc., San Francisco"
            android:textSize="12sp"
            android:textColor="@color/fl_primary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>
