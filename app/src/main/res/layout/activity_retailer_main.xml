<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/retailer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_retailer_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/retailer_nav_graph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/retailerBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/retailerBottomDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_outline"
        app:layout_constraintBottom_toTopOf="@id/retailerBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/retailerBottomNav"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:background="@color/fl_surface"
        android:clipToPadding="false"
        app:menu="@menu/retailer_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/nav_retailer_item_tint"
        app:itemTextColor="@drawable/nav_retailer_item_tint"
        app:itemTextAppearanceActive="@style/RetailerBottomNavText"
        app:itemTextAppearanceInactive="@style/RetailerBottomNavText"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
