<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootChangePassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollChangePassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="38dp"
            android:paddingBottom="28dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBackChangePass"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/fl_on_surface_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIconChangePass"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/fl_primary_container"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBackChangePass">

                <ImageView
                    android:id="@+id/imgChangePass"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/fl_primary" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTitleChangePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Change password"
                android:textColor="@color/fl_on_surface"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardIconChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvSubChangePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp"
                android:text="Send a verification code to your email, then set a new password."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvTitleChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvEmailHintChangePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="to a••••e@gmail.com"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/tvSubChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSendOtpChangePass"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_button_green_pill"
                android:text="Send OTP"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvEmailHintChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvOtpLabelChangePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="OTP Code"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btnSendOtpChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOtpChangePass"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:gravity="center"
                android:hint="6-digit code"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:letterSpacing="0.15"
                app:layout_constraintTop_toBottomOf="@id/tvOtpLabelChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvResendChangePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Resend code"
                android:textColor="@color/fl_primary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/etOtpChangePass"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvNewPassLabelChangePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="New Password"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvResendChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNewPasswordChangePass"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="New password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvNewPassLabelChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvConfirmLabelChangePass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirm Password"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etNewPasswordChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etConfirmPasswordChangePass"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Confirm new password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvConfirmLabelChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdateChangePass"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/bg_button_green_pill"
                android:text="Update Password"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etConfirmPasswordChangePass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
