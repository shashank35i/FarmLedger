<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:fillViewport="true"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="310dp"
            android:background="@color/fl_secondary"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/bg_circle_header_icon"
                android:padding="12dp"
                android:src="@drawable/ic_back"
                app:tint="@color/fl_on_surface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/bg_circle_header_icon"
                android:padding="12dp"
                android:src="@drawable/ic_share"
                app:tint="@color/fl_on_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/tagRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="70dp">

                <TextView
                    android:id="@+id/tvTagCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tag_pill"
                    android:paddingStart="14dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="8dp"
                    android:text="Vegetables"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTagMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organic"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="13sp"
                    android:background="@drawable/bg_tag_pill"
                    android:layout_marginStart="10dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic Tomatoes"
                android:textColor="@color/fl_on_surface"
                android:textSize="34sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tagRow"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/tvBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch #B-2023-001"
                android:textColor="@color/fl_secondary_container"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProductName"
                android:layout_marginTop="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Blockchain card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBlockchain"
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="-44dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blockchain Status"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvBlockchainStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified Authentic"
                    android:textColor="@color/fl_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_verified_pill"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:id="@+id/ivBlockchainIcon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_shield"
                        app:tint="@color/fl_primary" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvOriginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin Details"
            android:textColor="@color/fl_on_surface"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/cardBlockchain"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Origin card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOrigin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/tvOriginTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <FrameLayout
                    android:id="@+id/originIconWrap"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/bg_mint_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_leaf"
                        app:tint="@color/fl_primary" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvFarmName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Green Valley Farms"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/originIconWrap"
                    app:layout_constraintTop_toTopOf="@id/originIconWrap"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvFarmSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Certified Organic Producer"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tvFarmName"
                    app:layout_constraintTop_toBottomOf="@id/tvFarmName"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:id="@+id/locationRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="@id/tvFarmName"
                    app:layout_constraintTop_toBottomOf="@id/tvFarmSub"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_pin"
                        app:tint="@color/fl_on_surface_variant" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Salinas Valley, CA"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:id="@+id/div1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/fl_outline"
                    app:layout_constraintTop_toBottomOf="@id/locationRow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidCol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.52" />

                <TextView
                    android:id="@+id/tvHarvestLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Harvest Date"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/div1"
                    app:layout_constraintEnd_toStartOf="@id/guidCol"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:id="@+id/tvMethodLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Farming Method"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/guidCol"
                    app:layout_constraintTop_toBottomOf="@id/div1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="14dp" />

                <LinearLayout
                    android:id="@+id/harvestRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHarvestLabel"
                    app:layout_constraintEnd_toStartOf="@id/guidCol"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/fl_on_surface_variant" />

                    <TextView
                        android:id="@+id/tvHarvestValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Oct 12, 2023"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/methodRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="@id/guidCol"
                    app:layout_constraintTop_toBottomOf="@id/tvMethodLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_method"
                        app:tint="@color/fl_on_surface_variant" />

                    <TextView
                        android:id="@+id/tvMethodValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Organic / Soil"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Journey header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/journeyHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardOrigin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvJourneyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Journey"
                android:textColor="@color/fl_on_surface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvViewTimeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Full Timeline"
                android:textColor="@color/fl_primary"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Journey card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardJourney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="22dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/journeyHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/journeyRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="84dp"
                        android:background="@color/fl_surface_variant">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/fl_outline" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_dot_green" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvJourneyTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harvested"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Green Valley Farms • Oct 12"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/journeyRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="84dp"
                        android:background="@color/fl_surface_variant">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/fl_outline" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_dot_blue" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvJourneyTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Transit"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="FastTrans Logistics • Oct 13"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/journeyRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="84dp"
                        android:background="@color/fl_surface_variant">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/fl_outline" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_dot_orange" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvJourneyTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retail Store"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Fresh Mart Inc. • Today"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
