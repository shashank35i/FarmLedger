<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDistributor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/fl_outline"
    app:cardBackgroundColor="@color/fl_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <FrameLayout
            android:id="@+id/iconWrap"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_circle_soft_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_truck_outline"
                app:tint="@color/primary" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="FastTrans Logistics"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toTopOf="@id/iconWrap"
            app:layout_constraintEnd_toStartOf="@id/ivVerified" />

        <ImageView
            android:id="@+id/ivVerified"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_check_circle_20"
            app:tint="@color/fl_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvName" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="D-001"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="+1 555-0123"
            android:textColor="@color/textPrimary"
            android:textSize="13sp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toBottomOf="@id/tvId" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="San Francisco, CA"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/iconWrap"
            app:layout_constraintTop_toBottomOf="@id/tvPhone" />

        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/fl_primary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
