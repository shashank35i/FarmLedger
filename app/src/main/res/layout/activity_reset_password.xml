<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootReset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollReset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="38dp"
            android:paddingBottom="28dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBackReset"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/fl_on_surface_variant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResetIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/fl_primary_container"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBackReset">

                <ImageView
                    android:id="@+id/imgReset"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="Reset"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/fl_primary" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvResetTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif"
                android:text="Reset password"
                android:textColor="@color/fl_on_surface"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardResetIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvResetSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:text="Enter the code we sent to your email and set a new password."
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvResetTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvResetOtpLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif"
                android:text="OTP Code"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvResetSub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOtp"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:hint="6-digit code"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:letterSpacing="0.15"
                app:layout_constraintTop_toBottomOf="@id/tvResetOtpLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvOtpHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Code expires in 10 minutes"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/etOtp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvResendReset" />

            <TextView
                android:id="@+id/tvResendReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Resend code"
                android:textColor="@color/fl_primary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/etOtp"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvNewPassLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="New Password"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvOtpHint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:endIconMode="password_toggle"
                app:helperText="Minimum 6 characters"
                app:layout_constraintTop_toBottomOf="@id/tvNewPassLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_outline"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/fl_on_surface"
                    android:textColorHint="@color/fl_on_surface_variant"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvConfirmLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="Confirm Password"
                android:textColor="@color/fl_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tilNewPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:endIconMode="password_toggle"
                app:layout_constraintTop_toBottomOf="@id/tvConfirmLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_outline"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:hint="Confirm new password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/fl_on_surface"
                    android:textColorHint="@color/fl_on_surface_variant"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/bg_button_green_pill"
                android:fontFamily="sans-serif"
                android:text="Update Password"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
