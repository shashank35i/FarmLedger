<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootQr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fl_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/fl_on_surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="QR Code"
            android:textColor="@color/fl_on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_outline"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toBottomOf="@+id/divTop"
        app:layout_constraintBottom_toTopOf="@+id/bottomActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardInner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/fl_outline"
                        app:cardBackgroundColor="@color/fl_surface"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="18dp"
                            android:paddingBottom="16dp">

                            <TextView
                                android:id="@+id/tvCardTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:text="Product QR Code"
                                android:textColor="@color/fl_on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <FrameLayout
                                android:id="@+id/qrFrame"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@+id/tvCardTitle"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintDimensionRatio="1:1">

                                <ImageView
                                    android:id="@+id/ivQr"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:scaleType="centerCrop"
                                    android:contentDescription="@null" />
                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/actionRow"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                app:layout_constraintTop_toBottomOf="@+id/qrFrame"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSave"
                                    android:layout_width="0dp"
                                    android:layout_height="52dp"
                                    android:layout_weight="1"
                                    android:text="Save"
                                    android:textAllCaps="false"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/fl_primary"
                                    android:background="@drawable/bg_btn_green_outline" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnShare"
                                    android:layout_width="0dp"
                                    android:layout_height="52dp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="14dp"
                                    android:text="Share"
                                    android:textAllCaps="false"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/fl_on_surface"
                                    android:background="@drawable/bg_btn_green_filled"
                                    app:icon="@drawable/ic_share"
                                    app:iconTint="@color/fl_on_surface"
                                    app:iconPadding="10dp"
                                    app:iconGravity="textStart"
                                    app:cornerRadius="26dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvProduct"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:text="Organic Tomatoes"
                                android:textColor="@color/fl_on_surface"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="end"
                                app:layout_constraintTop_toBottomOf="@+id/actionRow"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/tvBatch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:text="B - 2023-001"
                                android:textColor="@color/fl_on_surface_variant"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="end"
                                app:layout_constraintTop_toBottomOf="@+id/tvProduct"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline"
                app:cardBackgroundColor="@color/fl_surface"
                app:layout_constraintTop_toBottomOf="@+id/cardMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/tvAboutTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="About this QR Code"
                        android:textColor="@color/fl_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAbout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="•  Unique identifier for this batch"
                        android:textColor="@color/fl_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAbout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="•  Scan to view complete supply chain journey"
                        android:textColor="@color/fl_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAbout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="•  Verified on blockchain for authenticity"
                        android:textColor="@color/fl_primary"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fl_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackBottom"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textStyle="bold"
            android:textColor="@color/fl_on_surface"
            android:background="@drawable/bg_btn_green_outline"
            app:cornerRadius="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
