<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_surface_variant"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                app:tint="@color/fl_on_surface" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Distributor"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/fl_on_surface" />

                <TextView
                    android:id="@+id/tvTransferSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer B-000"
                    android:textSize="14sp"
                    android:textColor="@color/fl_on_surface_variant"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTransferInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/fl_outline"
            app:cardBackgroundColor="@color/fl_surface"
            android:layout_marginBottom="22dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <FrameLayout
                    android:id="@+id/transferIconWrap"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_soft_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_nav_box"
                        app:tint="@color/primary" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvTransferTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Transfer Batch"
                    android:textStyle="bold"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/transferIconWrap"
                    app:layout_constraintTop_toTopOf="@id/transferIconWrap"
                    app:layout_constraintEnd_toStartOf="@id/tvTransferBadge" />

                <TextView
                    android:id="@+id/tvTransferBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pill_verified"
                    android:text="Organic"
                    android:textColor="@color/fl_primary"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/transferIconWrap" />

                <TextView
                    android:id="@+id/tvTransferDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Select a verified distributor to transfer this batch. Once transferred, data will be locked."
                    android:textSize="13sp"
                    android:textColor="@color/fl_on_surface_variant"
                    app:layout_constraintStart_toStartOf="@id/tvTransferTitle"
                    app:layout_constraintTop_toBottomOf="@id/tvTransferTitle"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvVerifiedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified Distributors"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/fl_on_surface"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/distributorListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fl_outline"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvManualLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Enter Manually"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/fl_on_surface"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etManualDistributor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Enter Distributor ID or Phone Number"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmTransfer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Transfer"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/fl_primary"
            android:layout_marginTop="28dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cancel"
            android:textColor="@color/fl_primary"
            android:layout_marginTop="10dp"

            android:backgroundTint="@color/fl_surface"
            app:strokeColor="@color/fl_primary"
            app:cornerRadius="28dp" />

    </LinearLayout>
</ScrollView>
