<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textColor="@color/fl_on_surface"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scanner Frame -->
    <FrameLayout
        android:id="@+id/scannerFrame"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/bg_scanner_box"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <!-- Purple Corners -->

        <!-- Center Scan Icon -->
    </FrameLayout>

    <!-- Instruction -->
    <TextView
        android:id="@+id/txtInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position QR code within frame"
        android:textColor="@color/fl_on_surface"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/scannerFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Sub Instruction -->
    <TextView
        android:id="@+id/txtSubInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold steady for automatic detection"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txtInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Scan Button -->
    <Button
        android:id="@+id/btnScan"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:text="Tap to Scan"
        android:textColor="@color/fl_on_surface"
        android:textSize="15sp"
        android:background="@drawable/bg_purple_button"
        app:layout_constraintTop_toBottomOf="@id/txtSubInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Footer -->
    <TextView
        android:id="@+id/txtFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure the QR code is well-lit and clearly visible"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/btnScan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_scan_circle"
        android:padding="12dp"
        android:src="@drawable/ic_scan"
        tools:layout_editor_absoluteX="434dp"
        tools:layout_editor_absoluteY="888dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_qr_corners"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="34dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
