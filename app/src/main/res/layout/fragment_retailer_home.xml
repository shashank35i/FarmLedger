<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRetailerHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22dp">

        <View
            android:id="@+id/headerBg"
            android:layout_width="0dp"
            android:layout_height="268dp"
            android:background="@drawable/orange_gradient_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="34dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Welcome back,"
            android:textColor="@color/fl_on_primary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Fresh Mart Inc."
            android:textColor="@color/fl_on_surface"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/headerIconWrap"
            app:layout_constraintStart_toStartOf="@id/tvWelcome"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerIconWrap"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="44dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="27dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_header_icon_circle">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivHeaderStore"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_store"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/fl_on_surface" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="-102dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBg">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReceived"
                android:layout_width="0dp"
                android:layout_height="132dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ivRecWrap"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_stat_icon_tile_orange">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_box"
                                android:contentDescription="@null"
                                app:tint="@color/fl_tertiary"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvRecLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Received"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivRecWrap" />

                    <TextView
                        android:id="@+id/tvRecValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        android:text="89"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRecLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAvailable"
                android:layout_width="0dp"
                android:layout_height="132dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ivAvailWrap"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_stat_icon_tile_blue">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_cart"
                                android:contentDescription="@null"
                                app:tint="@color/fl_primary"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvAvailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Available"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivAvailWrap" />

                    <TextView
                        android:id="@+id/tvAvailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        android:text="45"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAvailLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSold"
                android:layout_width="0dp"
                android:layout_height="132dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ivSoldWrap"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_stat_icon_tile_green">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_check_ring"
                                android:contentDescription="@null"
                                app:tint="@color/fl_tertiary"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvSoldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Sold"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivSoldWrap" />

                    <TextView
                        android:id="@+id/tvSoldValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        android:text="44"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSoldLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/statsRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIncoming"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <FrameLayout
                    android:id="@+id/incomingIconWrap"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:background="@drawable/bg_action_icon_circle_orange"
                    android:padding="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivIncoming"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_inbox_tray"
                        app:tint="@color/fl_tertiary" />

                    <TextView
                        android:id="@+id/tvIncomingBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="20dp"
                        android:minHeight="20dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/bg_badge_orange"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="2"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1" />

                </FrameLayout>


                    <TextView
                        android:id="@+id/tvIncomingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        android:text="Incoming"
                        android:textColor="@color/fl_on_tertiary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/incomingIconWrap"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInventory"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <FrameLayout
                        android:id="@+id/inventoryIconWrap"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/bg_action_icon_circle_green"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivInventory"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_inventory_box"
                            app:tint="@color/fl_primary" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvInventoryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        android:text="Inventory"
                        android:textColor="@color/fl_on_primary_container"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/inventoryIconWrap"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnScan"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:text="Scan QR Code"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            app:icon="@drawable/ic_scan_qr"
            app:iconTint="@color/fl_on_surface"
            app:iconPadding="14dp"
            app:iconGravity="textStart"

            app:cornerRadius="32dp"
            android:backgroundTint="@color/orange"
            android:background="@drawable/bg_scan_button"
            app:layout_constraintTop_toBottomOf="@id/actionRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Recent Batches"
            android:textColor="@color/fl_on_surface"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnScan" />

        <TextView
            android:id="@+id/tvViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="View All"
            android:textColor="@color/fl_tertiary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/labelRecent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelRecent" />

        <TextView
            android:id="@+id/tvRecentEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="No recent batches yet"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelRecent" />

        <!-- item1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRecentEmpty">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/iconWrap1"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/fl_tertiary_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_box"
                        android:contentDescription="@null"
                        app:tint="@color/fl_tertiary" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvStatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_status_pill_blue"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="Available"
                    android:textColor="@color/fl_primary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iconWrap1" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="Organic Tomatoes"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/iconWrap1"
                    app:layout_constraintTop_toTopOf="@id/iconWrap1"
                    app:layout_constraintEnd_toStartOf="@id/tvStatus1" />

                <TextView
                    android:id="@+id/t1sub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="B -2023-001"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="13sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/iconWrap1"
                    app:layout_constraintTop_toBottomOf="@id/t1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="10 mins ago"
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/t1sub"
                    app:layout_constraintStart_toStartOf="@id/t1"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- item2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
