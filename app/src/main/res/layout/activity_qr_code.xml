<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            app:tint="@color/fl_on_surface" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="QR Code"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/qrCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@id/descText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintVertical_bias="0.18">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="26dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/titleInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product QR Code"
                android:textColor="@color/fl_on_surface"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitleInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Batch #B-2023-001"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleInside" />

            <FrameLayout
                android:id="@+id/qrFrame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="22dp"

                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subtitleInside"
                app:layout_constraintWidth_percent="0.82">

                <ImageView
                    android:id="@+id/imgQr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="26dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sample_qr" />

                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="14dp"
                    app:cardBackgroundColor="@color/fl_primary"
                    app:cardCornerRadius="29dp"
                    app:cardElevation="8dp"
                    >

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_qr_small"
                        app:tint="@color/fl_on_surface" />
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/actionsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qrFrame">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/fl_surface"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/fl_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_download"
                    app:iconPadding="10dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/fl_primary"
                    app:strokeColor="@color/fl_primary"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/fl_primary"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:icon="@drawable/ic_share"
                    app:iconPadding="10dp"
                    app:iconSize="22dp"
                    app:iconTint="@color/fl_on_surface" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/descText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:text="Print this QR code and attach it to your product packaging. Distributors and consumers can scan this to verify authenticity."
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/backRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qrCard" />

    <LinearLayout
        android:id="@+id/backRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="44dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_home"
            app:tint="@color/fl_on_surface_variant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Back to Dashboard"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
