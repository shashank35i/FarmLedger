<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TITLE -->
    <TextView
        android:text="Scan History"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/fl_on_surface"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- SEARCH -->
    <EditText
        android:id="@+id/etSearch"
        android:hint="Search history..."
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <ProgressBar
        android:id="@+id/progressHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvHistoryEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="No scans yet."
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="14sp"
        android:visibility="gone"/>

    <!-- LIST -->
    <LinearLayout
        android:id="@+id/historyList"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>
