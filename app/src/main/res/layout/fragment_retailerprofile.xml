<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRetailerProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:paddingBottom="110dp"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/headerBg"
            android:layout_width="0dp"
            android:layout_height="238dp"
            android:background="@drawable/bg_retailer_profile_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatarWrap"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="44dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:cardCornerRadius="45dp"
            app:cardElevation="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/fl_tertiary_container"
            app:strokeWidth="6dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAvatarIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_shop_outline"
                app:tint="@color/fl_tertiary" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Fresh Mart Inc."
            android:textColor="@color/fl_on_surface"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatarWrap"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Verified Retailer"
            android:textColor="@color/fl_tertiary_container"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatarWrap"
            app:layout_constraintTop_toBottomOf="@id/tvStoreName" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="-44dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:cardCornerRadius="22dp"
            app:cardElevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBg"
            app:strokeColor="@color/fl_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_profile_inset"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:showDividers="middle">

                <include
                    android:id="@+id/rowStoreProfile"
                    layout="@layout/item_retailer_profile_row"
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />


                <include
                    android:id="@+id/rowNotifications"
                    layout="@layout/item_retailer_profile_row"
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />

                <include
                    android:id="@+id/rowPrivacy"
                    layout="@layout/item_retailer_profile_row"
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />

                <include
                    android:id="@+id/rowHelp"
                    layout="@layout/item_retailer_profile_row"
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />

                <include
                    android:id="@+id/rowSettings"
                    layout="@layout/item_retailer_profile_row"
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSignOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="22dp"
            app:cardBackgroundColor="@color/fl_surface"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardMenu"
            app:strokeColor="@color/fl_outline"
            app:strokeWidth="1dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignOut"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Sign Out"
                android:textAllCaps="false"
                android:textColor="@color/fl_error"
                android:textSize="16sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/fl_error"
                app:rippleColor="@color/fl_success44" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
