<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_scan_screen"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnBackWrap"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/fl_surface_variant"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="11dp"
            android:visibility="invisible"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="@null"
            app:tint="@color/fl_on_surface"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Distributor Scan"
        android:textColor="@color/fl_on_surface"
        android:textSize="20sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btnBackWrap"
        app:layout_constraintBottom_toBottomOf="@id/btnBackWrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Verify authenticity and proceed to pickup"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/workflowRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:textColor="@color/fl_on_surface"
            android:textSize="12sp"
            android:textStyle="bold"
            android:includeFontPadding="false"/>

        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/fl_on_surface_variant"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textColor="@color/fl_surface_variant"
            android:textSize="12sp"
            android:includeFontPadding="false"/>

        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/fl_on_surface_variant"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textColor="@color/fl_surface_variant"
            android:textSize="12sp"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameScanner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/workflowRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.92">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scannerCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/fl_surface_variant"
            app:strokeWidth="4dp"
            app:strokeColor="@color/fl_outline"
            app:cardUseCompatPadding="false"/>

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/barcodeScanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <View
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="26dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/corner_top_left"/>

        <View
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/corner_top_right"/>

        <View
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/corner_bottom_left"/>

        <View
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/corner_bottom_right"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/centerScanChip"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            app:cardCornerRadius="38dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivCenterScan"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"

                android:contentDescription="@null"
                app:tint="@color/fl_primary"/>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <TextView
        android:id="@+id/tvHint1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Align QR inside the frame"
        android:textColor="@color/fl_on_surface"
        android:textSize="16sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/frameScanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHint2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="We will verify on blockchain before proceeding"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="13sp"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvHint1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/fl_on_surface"
        app:strokeWidth="1dp"
        app:strokeColor="@color/fl_on_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/tvHint2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/dot_status_active"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Ready to scan"
                android:textColor="@color/fl_surface_variant"
                android:textSize="13sp"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTapToScan"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginTop="18dp"
        android:text="Tap to Scan"
        android:textAllCaps="false"
        android:textColor="@color/fl_on_surface"
        android:textSize="16sp"
        app:cornerRadius="33dp"
        app:backgroundTint="@color/fl_primary"
        app:rippleColor="@color/fl_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Keep camera steady for best results"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnTapToScan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
