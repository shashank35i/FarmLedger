<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootTransport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/fl_on_surface" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update Transport"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/fl_on_surface"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_outline"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/topDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBatchInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/fl_outline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch Information"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCardSub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Updating status for Batch #B-2023-001"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"/>

                    <View
                        android:id="@+id/div1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:background="@color/fl_outline"/>

                    <TextView
                        android:id="@+id/lblDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date &amp; Time"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dateTimeWrap"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/fl_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/fl_outline">

                        <EditText
                            android:id="@+id/etDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColorHint="@color/fl_on_surface_variant"
                            android:hint="Date and Time"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/fl_on_surface"


                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:singleLine="true"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/lblVehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle ID"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/vehicleWrap"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/fl_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/fl_outline">

                        <EditText
                            android:id="@+id/etVehicleId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/fl_on_surface"
                            android:textColorHint="@color/fl_on_surface_variant"
                            android:hint="e.g. TRUCK-055"
                            android:inputType="text"
                            android:singleLine="true"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/lblLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/locationWrap"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/fl_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/fl_outline">

                        <EditText
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/fl_on_surface"
                            android:textColorHint="@color/fl_on_surface_variant"
                            android:hint="e.g. Logistics Hub A, CA"
                            android:inputType="textPostalAddress"
                            android:singleLine="true"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/lblTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature (Â°C)"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tempWrap"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/fl_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/fl_outline">

                        <EditText
                            android:id="@+id/etTemp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/fl_on_surface"
                            android:textColorHint="@color/fl_on_surface_variant"
                            android:hint="4.5"
                            android:inputType="numberDecimal"
                            android:singleLine="true"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/lblStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storage Conditions"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="14dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/storageWrap"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/fl_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/fl_outline">

                        <EditText
                            android:id="@+id/etStorage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            android:gravity="top"
                            android:textSize="16sp"
                            android:textColor="@color/fl_on_surface"
                            android:textColorHint="@color/fl_on_surface_variant"
                            android:hint="Describe storage conditions, handling notes, etc."
                            android:inputType="textMultiLine"
                            android:maxLines="4"/>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="22dp"
                android:text="Submit Update"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/fl_primary"
                android:textColor="@color/fl_on_surface"
                app:cornerRadius="32dp"
                app:elevation="0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
