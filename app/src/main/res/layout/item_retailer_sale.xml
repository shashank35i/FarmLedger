<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/fl_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/fl_outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:descendantFocusability="blocksDescendants">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconWrap"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/fl_tertiary_container"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_trend_up"
                android:contentDescription="Icon" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Organic Tomatoes"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@+id/iconWrap"
            app:layout_constraintTop_toTopOf="@+id/iconWrap"
            app:layout_constraintEnd_toStartOf="@+id/tvAmount"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$45.00"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvBatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="B - 2023 - 001"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            android:layout_marginTop="4dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/fl_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconWrap"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvSaleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID: S-1023"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/tvWhen"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/tvWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today, 10:30 AM"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvSaleId" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
