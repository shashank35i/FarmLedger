<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCustomerHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollCustomer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/headerCustomer"
                android:layout_width="0dp"
                android:layout_height="320dp"
                android:background="@drawable/bg_header_gradients"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:paddingTop="56dp">

                    <TextView
                        android:id="@+id/tvVerifyTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Verify Your Food"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvVerifySub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Scan QR codes to trace the journey from\nfarm to your table."
                        android:textColor="@color/fl_secondary_container"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvVerifyTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="-172dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="14dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/fl_surface"
                app:layout_constraintTop_toBottomOf="@+id/headerCustomer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="26dp">

                    <FrameLayout
                        android:id="@+id/iconScanWrap"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/bg_circle_soft_purple"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/ivScanIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_qr_scan"
                            app:tint="@color/fl_secondary" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvScanTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Scan Product QR"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/iconScanWrap"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvScanSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="Point your camera at the FarmLedger\ncode"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvScanTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartScanning"
                        android:layout_width="0dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="18dp"
                        android:text="Start Scanning"
                        android:textAllCaps="false"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="15sp"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/fl_secondary"
                        app:cornerRadius="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvScanSub"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvRecentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="Recent Scans"
                android:textColor="@color/fl_on_surface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/cardScan"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:text="View All"
                android:textColor="@color/fl_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvRecentTitle"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/recentList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="22dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/tvRecentTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvRecentEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="No scans yet. Start scanning to verify your food."
                    android:textColor="@color/fl_on_surface_variant"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/recentItem1"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginBottom="14dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/fl_outline"
                    app:cardBackgroundColor="@color/fl_surface">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <FrameLayout
                            android:id="@+id/recentIcon1"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/bg_soft_green_square"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_check_circle_line"
                                app:tint="@color/fl_primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvRecentName1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="Organic Apples"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/recentIcon1"
                            app:layout_constraintTop_toTopOf="@+id/recentIcon1"
                            app:layout_constraintEnd_toStartOf="@+id/ivChevron1" />

                        <LinearLayout
                            android:id="@+id/metaRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/recentIcon1"
                            app:layout_constraintTop_toBottomOf="@+id/tvRecentName1">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@null"
                                android:src="@android:drawable/ic_lock_idle_alarm"
                                app:tint="@color/fl_on_surface_variant" />

                            <TextView
                                android:id="@+id/tvRecentTime1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:text="Today"
                                android:textColor="@color/fl_on_surface_variant"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivChevron1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:contentDescription="@null"
                            android:rotation="180"
                            android:src="@drawable/ic_back"
                            app:tint="@color/fl_on_surface_variant"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/recentItem2"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginBottom="14dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/fl_outline"
                    app:cardBackgroundColor="@color/fl_surface">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <FrameLayout
                            android:id="@+id/recentIcon2"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/bg_soft_green_square"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_check_circle_line"
                                app:tint="@color/fl_primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvRecentName2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="Dairy Milk"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/recentIcon2"
                            app:layout_constraintTop_toTopOf="@+id/recentIcon2"
                            app:layout_constraintEnd_toStartOf="@+id/ivChevron2" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/recentIcon2"
                            app:layout_constraintTop_toBottomOf="@+id/tvRecentName2">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@null"
                                android:src="@android:drawable/ic_lock_idle_alarm"
                                app:tint="@color/fl_on_surface_variant" />

                            <TextView
                                android:id="@+id/tvRecentTime2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:text="Yesterday"
                                android:textColor="@color/fl_on_surface_variant"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivChevron2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:contentDescription="@null"
                            android:rotation="180"
                            android:src="@drawable/ic_back"
                            app:tint="@color/fl_on_surface_variant"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/recentItem3"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/fl_outline"
                    app:cardBackgroundColor="@color/fl_surface">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <FrameLayout
                            android:id="@+id/recentIcon3"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/bg_soft_orange_square"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_check_circle_line"
                                app:tint="@color/fl_tertiary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvRecentName3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="Premium Rice"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/recentIcon3"
                            app:layout_constraintTop_toTopOf="@+id/recentIcon3"
                            app:layout_constraintEnd_toStartOf="@+id/ivChevron3" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@+id/recentIcon3"
                            app:layout_constraintTop_toBottomOf="@+id/tvRecentName3">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@null"
                                android:src="@android:drawable/ic_lock_idle_alarm"
                                app:tint="@color/fl_on_surface_variant" />

                            <TextView
                                android:id="@+id/tvRecentTime3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:text="Oct 10"
                                android:textColor="@color/fl_on_surface_variant"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivChevron3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:contentDescription="@null"
                            android:rotation="180"
                            android:src="@drawable/ic_back"
                            app:tint="@color/fl_on_surface_variant"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
