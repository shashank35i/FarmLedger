<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardBackgroundColor="@color/fl_surface"
    app:cardCornerRadius="18dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/fl_outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Organic Tomatoes"
            android:textColor="@color/fl_on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pillVerified"/>

        <LinearLayout
            android:id="@+id/pillVerified"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_verified_pill_green"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_verified_badge"
                app:tint="@color/fl_primary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBatchId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="B - 2023-001"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tvProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/fl_outline"
            app:layout_constraintTop_toBottomOf="@id/tvBatchId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/icFrom"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_truck_outline"
            app:tint="@color/fl_on_surface_variant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div"/>

        <TextView
            android:id="@+id/tvFromLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:text="From Distributor"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/icFrom"
            app:layout_constraintTop_toBottomOf="@id/div"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFromValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="FastTrans Logistics"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icFrom"
            app:layout_constraintTop_toBottomOf="@id/tvFromLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/icQty"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_box"
            app:tint="@color/fl_on_surface_variant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFromValue"/>

        <TextView
            android:id="@+id/tvQtyLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            android:text="Quantity"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/icQty"
            app:layout_constraintTop_toBottomOf="@id/tvFromValue"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvQtyValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="500 kg"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icQty"
            app:layout_constraintTop_toBottomOf="@id/tvQtyLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/icDate"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/fl_on_surface_variant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQtyValue"/>

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            android:text="Transfer Date"
            android:textColor="@color/fl_on_surface_variant"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/icDate"
            app:layout_constraintTop_toBottomOf="@id/tvQtyValue"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:text="Oct 14, 2023 02:30 PM"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icDate"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/boxTx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="@color/fl_tertiary_container"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/fl_tertiary"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tvTxTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Blockchain Transaction"
                    android:textColor="@color/fl_on_tertiary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTxHash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2dp"
                    android:text="0x9b2c...1307"
                    android:textColor="@color/fl_tertiary"
                    android:textSize="13sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_btn_accept_green"
            android:drawablePadding="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Accept Stock"
            android:textAllCaps="false"
            android:textColor="@color/fl_on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/boxTx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnReject"
           />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_btn_reject_outline_red"
            android:drawablePadding="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/fl_error"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/boxTx"
            app:layout_constraintStart_toEndOf="@id/btnAccept"
            app:layout_constraintEnd_toEndOf="parent"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
