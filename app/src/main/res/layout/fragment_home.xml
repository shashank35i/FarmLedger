<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="292dp"
                android:background="@drawable/header_curved_bg"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="34dp"
                android:paddingBottom="22dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvWelcomeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Welcome back,"
                    android:textColor="@color/fl_primary_containerFF"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvFarmNameHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="Green Valley Farms"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcomeLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/headerIconWrap" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/headerIconWrap"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardBackgroundColor="@color/fl_primaryFF"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivHeaderIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:padding="15dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_user" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-92dp"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:weightSum="2"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActiveBatches"
                    android:layout_width="0dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <FrameLayout
                            android:id="@+id/activeIconWrap"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_green"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivActiveIcon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_nav_box"
                                app:tint="@color/fl_primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvActiveDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="+2"
                            android:textColor="@color/fl_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvActiveLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Active Batches"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/activeIconWrap"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvActiveValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:includeFontPadding="false"
                            android:lineHeight="28sp"
                            android:text="12"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/tvActiveLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardQrScans"
                    android:layout_width="0dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp"
                    app:cardUseCompatPadding="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <FrameLayout
                            android:id="@+id/qrIconWrap"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_soft_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivQrIcon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_qr_scan"
                                app:tint="@color/fl_primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvQrDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="+15%"
                            android:textColor="@color/fl_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvQrLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="QR Scans"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/qrIconWrap"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvQrValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:includeFontPadding="false"
                            android:lineHeight="28sp"
                            android:text="1.2k"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/tvQrLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionPillsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:weightSum="2"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintTop_toBottomOf="@id/statsRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pillAddCrop"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:cardCornerRadius="48dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="false"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <FrameLayout
                            android:id="@+id/addIconHolder"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_soft_green"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivAdd"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/ic_plus"
                                app:tint="@color/fl_primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvAddCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="Add Crop"
                            android:textColor="@color/fl_primary"
                            android:textSize="14.5sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/addIconHolder"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pillProducts"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:cardCornerRadius="48dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="false"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <FrameLayout
                            android:id="@+id/prodIconHolder"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_soft_blue"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivProd"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/ic_nav_box"
                                app:tint="@color/fl_primary" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="Products"
                            android:textColor="@color/fl_primary"
                            android:textSize="14.5sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/prodIconHolder"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recentHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/actionPillsRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvRecentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Recent Batches"
                    android:textColor="@color/fl_on_surface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/btnViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="View All"
                    android:textColor="@color/fl_primary"
                    android:textSize="13.5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvRecentTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/emptyRecentState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/recentHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp">

                    <ImageView
                        android:id="@+id/ivEmptyRecent"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_empty_recent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvEmptyRecentTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="No batches yet"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/ivEmptyRecent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvEmptyRecentSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:includeFontPadding="false"
                        android:text="Create your first crop batch to see it here."
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="13.5sp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/tvEmptyRecentTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/recentBatchesContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="22dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintTop_toBottomOf="@id/recentHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@id/recentBatchesContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
