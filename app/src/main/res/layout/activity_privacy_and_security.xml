<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootPrivacySecurity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/fl_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Privacy &amp; Security"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_surface_variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerDivider">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="16dp"
            android:paddingBottom="22dp">

            <TextView
                android:id="@+id/tvAccountSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:text="Account Security"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAccountSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:minHeight="76dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivLock"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_lock"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/fl_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvChangePassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Change Password"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/ivKey"
                            app:layout_constraintStart_toEndOf="@id/ivLock"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvChangePasswordSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Update your password regularly"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/ivKey"
                            app:layout_constraintStart_toEndOf="@id/ivLock"
                            app:layout_constraintTop_toBottomOf="@id/tvChangePassword" />

                        <ImageView
                            android:id="@+id/ivKey"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_key"
                            app:layout_constraintBottom_toBottomOf="@id/tvChangePasswordSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvChangePassword" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowTwoFactor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:minHeight="76dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivShield"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_shield"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/fl_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvTwoFactor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Two-Factor Authentication"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swTwoFactor"
                            app:layout_constraintStart_toEndOf="@id/ivShield"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvTwoFactorSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Add an extra layer of security"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swTwoFactor"
                            app:layout_constraintStart_toEndOf="@id/ivShield"
                            app:layout_constraintTop_toBottomOf="@id/tvTwoFactor" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swTwoFactor"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            app:trackTint="@null"
                            app:thumbTint="@null"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvTwoFactorSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvTwoFactor" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowBiometric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:minHeight="76dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivPhone"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_phone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/fl_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvBiometric"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Biometric Login"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swBiometric"
                            app:layout_constraintStart_toEndOf="@id/ivPhone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBiometricSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Use fingerprint or face ID"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swBiometric"
                            app:layout_constraintStart_toEndOf="@id/ivPhone"
                            app:layout_constraintTop_toBottomOf="@id/tvBiometric" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swBiometric"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            app:trackTint="@null"
                            app:thumbTint="@null"
                            android:splitTrack="false"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvBiometricSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvBiometric" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvPrivacySettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="Privacy Settings"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrivacySettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowProfileVisibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:minHeight="76dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivEye"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_eye"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/fl_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvProfileVisibility"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Profile Visibility"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/tvProfileVisibilityValue"
                            app:layout_constraintStart_toEndOf="@id/ivEye"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvProfileVisibilitySub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Control who can see your profile"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/tvProfileVisibilityValue"
                            app:layout_constraintStart_toEndOf="@id/ivEye"
                            app:layout_constraintTop_toBottomOf="@id/tvProfileVisibility" />

                        <TextView
                            android:id="@+id/tvProfileVisibilityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@id/tvProfileVisibilitySub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvProfileVisibility" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowActivityAlerts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:minHeight="76dp"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="14dp">

                        <ImageView
                            android:id="@+id/ivAlert"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_alert"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/fl_on_surface_variant" />

                        <TextView
                            android:id="@+id/tvActivityAlerts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="Activity Alerts"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@id/swActivityAlerts"
                            app:layout_constraintStart_toEndOf="@id/ivAlert"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvActivityAlertsSub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:text="Get notified of unusual activity"
                            android:textColor="@color/fl_on_surface_variant"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toStartOf="@id/swActivityAlerts"
                            app:layout_constraintStart_toEndOf="@id/ivAlert"
                            app:layout_constraintTop_toBottomOf="@id/tvActivityAlerts" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swActivityAlerts"
                            android:layout_width="54dp"
                            android:layout_height="30dp"
                            android:splitTrack="false"
                            app:trackTint="@null"
                            app:thumbTint="@null"
                            android:thumb="@drawable/switch_thumb_selector"
                            android:track="@drawable/switch_track_selector"
                            app:layout_constraintBottom_toBottomOf="@id/tvActivityAlertsSub"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvActivityAlerts" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvDataPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="Data &amp; Privacy"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDataPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowDownloadData"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvDownloadData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Download My Data"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvDownloadAction"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDownloadAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Request"
                            android:textColor="@color/fl_primary"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvPrivacyPolicyRow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:textColor="@color/fl_on_surface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvPrivacyPolicyAction"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvPrivacyPolicyAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View"
                            android:textColor="@color/fl_outline"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/fl_surface_variant" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rowDeleteAccount"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvDeleteAccount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Delete Account"
                            android:textColor="@color/fl_error"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvDeleteAction"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDeleteAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Permanent"
                            android:textColor="@color/fl_error"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvActiveSessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="Active Sessions"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/fl_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/fl_surface_variant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:id="@+id/iconWrap"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_soft_green"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivDevice"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_device" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDeviceTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
