<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="28dp">

    <FrameLayout
        android:id="@+id/flStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/viewStatusOuter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_status_outer_blue" />

        <View
            android:id="@+id/viewStatusInner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_status_inner_blue" />

        <ImageView
            android:id="@+id/ivStatusCheck"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/ic_check_white_16" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Today, 10:30 AM"
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="12sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flStatus"
        app:layout_constraintTop_toTopOf="@id/flStatus" />

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Transfer Accepted"
        android:textColor="@color/fl_on_surface"
        android:textSize="16sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flStatus"
        app:layout_constraintTop_toBottomOf="@id/tvTime" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2dp"
        android:text="Batch #B-2023-001 received at main\nlogistics hub. Temperature check passed."
        android:textColor="@color/fl_on_surface_variant"
        android:textSize="13sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flStatus"
        app:layout_constraintTop_toBottomOf="@id/tvItemTitle" />

    <LinearLayout
        android:id="@+id/llChipsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flStatus"
        app:layout_constraintTop_toBottomOf="@id/tvDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>
