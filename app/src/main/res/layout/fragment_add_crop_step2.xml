<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pageStep2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:forceDarkAllowed="false">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStep2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/fl_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:strokeColor="@color/fl_outline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSeedLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Seed Variety/Type"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSeedVariety"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_field_outline"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:hint="e.g. Hybrid F1"
                android:inputType="textCapWords"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_outline"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvSeedLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvFertLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Fertilizers Used"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etSeedVariety"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFertilizers"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_field_outline"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:hint="e.g. NPK 20-20-20"
                android:inputType="textCapWords"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_outline"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvFertLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvIrrLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Irrigation Method"
                android:textColor="@color/fl_on_surface_variant"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etFertilizers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/irrGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvIrrLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optDrip"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/optSprinkler"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvOptDrip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Drip"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optSprinkler"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="14dp"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp"
                    app:layout_constraintStart_toEndOf="@id/optDrip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvOptSprinkler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Sprinkler"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optFlood"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/optRainfed"
                    app:layout_constraintTop_toBottomOf="@id/optDrip">

                    <TextView
                        android:id="@+id/tvOptFlood"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Flood"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optRainfed"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/fl_outline"
                    app:strokeWidth="1dp"
                    app:layout_constraintStart_toEndOf="@id/optFlood"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/optSprinkler">

                    <TextView
                        android:id="@+id/tvOptRainfed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Rainfed"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="13sp" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrganic"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/fl_primary_container"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/fl_outline"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/irrGrid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivOrganic"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_leaf"
                        android:contentDescription="@null"
                        app:tint="@color/fl_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvOrganicTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif"
                        android:text="Organic Farming"
                        android:textColor="@color/fl_on_surface"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/ivOrganic"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/swOrganic" />

                    <TextView
                        android:id="@+id/tvOrganicSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Certified organic produce"
                        android:textColor="@color/fl_on_surface_variant"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/ivOrganic"
                        app:layout_constraintTop_toBottomOf="@id/tvOrganicTitle"
                        app:layout_constraintEnd_toStartOf="@id/swOrganic" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swOrganic"
                        android:layout_width="54dp"
                        android:layout_height="30dp"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector"
                        app:trackTint="@null"
                        app:thumbTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReviewCreate"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif"
        android:text="Review &amp; Create Batch"
        android:textAllCaps="false"
        android:textColor="@color/fl_on_surface"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/fl_primary"
        app:cornerRadius="28dp"
        app:rippleColor="@color/fl_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/cardStep2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
