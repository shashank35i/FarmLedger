<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootUpdateLocation"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:background="@color/fl_background">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Update Location"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/fl_on_surface"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack"/>

    <!-- Batch ID -->
    <TextView
        android:id="@+id/tvBatchId"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="B-2023-861"
        android:textSize="12sp"
        android:textColor="@color/fl_on_surface_variant"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- Card -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        app:layout_constraintTop_toBottomOf="@id/tvBatchId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvMovementTitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Movement Update"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fl_on_surface"/>

        <TextView
            android:id="@+id/tvMovementSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:text="Record the current location and status"
            android:textSize="12sp"
            android:textColor="@color/fl_on_surface_variant"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:text="Date &amp; Time"
            android:textSize="12sp"
            android:textColor="@color/fl_on_surface"/>

        <EditText
            android:id="@+id/etDateTime"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="2025-12-17T04:44"
            android:textSize="14sp"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="6dp"
            android:enabled="false"/>

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:text="Current Location"
            android:textSize="12sp"
            android:textColor="@color/fl_on_surface"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Enter location or use auto-detect"
            android:textSize="14sp"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="6dp"/>

        <!-- Auto Detect -->
        <LinearLayout
            android:id="@+id/layoutAutoDetect"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/tvAutoDetect"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:text="Auto-detect location"
                android:textSize="12sp"
                android:textColor="@color/fl_primary"/>
        </LinearLayout>

        <!-- Remarks -->
        <TextView
            android:id="@+id/tvRemarksLabel"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:text="Remarks (Optional)"
            android:textSize="12sp"
            android:textColor="@color/fl_on_surface"/>

        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            android:hint="Add any notes about conditions, delays, or observations"
            android:textSize="14sp"
            android:background="@drawable/bg_input"
            android:gravity="top"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Submit -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:text="Submit Update"
        android:textSize="16sp"
        android:textColor="@color/fl_on_surface"
        android:background="@drawable/bg_button_primary"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cancel -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:text="Cancel"
        android:textSize="16sp"
        android:textColor="@color/fl_primary"
        android:background="@drawable/bg_button_outline"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
