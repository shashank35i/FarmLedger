<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecent"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp">

        <FrameLayout
            android:id="@+id/batchIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_icon_soft_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_nav_box"
                app:tint="@color/primary" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvBatchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Organic Tomatoes"
            android:textColor="@color/textPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/batchIcon"
            app:layout_constraintTop_toTopOf="@+id/batchIcon" />

        <TextView
            android:id="@+id/tvBatchCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="B-2023-001"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/batchIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvBatchName" />

        <TextView
            android:id="@+id/pillStatus"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_pill_orange"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="In Transit"
            android:textColor="@color/orangeDark"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvBatchCode"
            app:layout_constraintTop_toBottomOf="@+id/tvBatchCode" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="10 mins ago"
            android:textColor="@color/textHint"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/pillStatus"
            app:layout_constraintTop_toBottomOf="@+id/pillStatus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
