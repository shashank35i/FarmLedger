<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/fl_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Edit Profile"
            android:textColor="@color/fl_on_surface"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fl_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="22dp"
            android:paddingBottom="28dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/avatarBlock"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/avatarCard"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    app:cardCornerRadius="66dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/fl_outline"
                    app:cardBackgroundColor="@color/fl_surface"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:padding="30dp"
                        android:src="@drawable/ic_user_outline"
                        android:contentDescription="@null" />
                    <ImageView
                        android:id="@+id/ivAvatarPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        android:visibility="gone"
                        android:contentDescription="@null" />

                    <ImageView
                        android:id="@+id/ivAvatarPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:padding="30dp"
                        android:src="@drawable/ic_user_outline"
                        android:contentDescription="@null" />

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_fab_green"
                    android:padding="12dp"
                    android:src="@drawable/ic_camera_white"
                    android:contentDescription="@null"
                    android:translationX="-6dp"
                    android:translationY="-6dp"
                    app:layout_constraintBottom_toBottomOf="@id/avatarCard"
                    app:layout_constraintEnd_toEndOf="@id/avatarCard" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/avatarBlock"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFullName"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Enter full name"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvLabelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Email Address"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etFullName"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Enter email address"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvLabelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Phone Number"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etEmail"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Enter phone number"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:inputType="phone"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvLabelLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Location"
                android:textColor="@color/fl_on_surface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/etPhone"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLocation"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Enter location"
                android:textColor="@color/fl_on_surface"
                android:textColorHint="@color/fl_on_surface_variant"
                android:textSize="18sp"
                android:inputType="text"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelLocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSetLocation"
                android:layout_marginEnd="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetLocation"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:text="Set"
                android:textAllCaps="false"
                android:textColor="@color/fl_primary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/fl_primary_container"
                app:strokeColor="@color/fl_primary"
                app:strokeWidth="1dp"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelLocation"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/bg_button_green_pill"
                android:text="Save Changes"
                android:textAllCaps="false"
                android:textColor="@color/fl_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btnSetLocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
